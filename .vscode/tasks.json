{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
                "build_yacc": "win_bison --defines=header\\parser.hpp --output=src\\parser.cpp --verbose  --report all  --report-file=trace  sql.y",
                "build_lex": "win_flex -o src\\tokens.cpp sql.l",
                "build_project": "g++ -g src\\*.cpp -o sql -I header\\ "             ,
                "Test":".\\sql .\\test.txt",
                "remove_files": "del .\\dbms\\tables\\*"
            }
    },   
    "tasks": [
      {
          "label": "Build",
        "type": "shell",
        "command":"Invoke-Expression $env:build_yacc;Invoke-Expression $env:build_lex;Invoke-Expression $env:build_project;Invoke-Expression $env:remove_files;",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Test",
      "type": "shell",
      "command":"Invoke-Expression $env:Test;",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
    ]
  }
  